{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "allowJs": false,
    "noEmit": false,
    "strict": true,
    "paths": {
      "@onecoach/lib-shared": ["../lib-shared/src/index.ts"],
      "@onecoach/lib-shared/*": ["../lib-shared/src/*"],
      "@onecoach/lib-shared/utils/*": ["../lib-shared/src/utils/*"],
      "@onecoach/lib-shared/id-generator": ["../lib-shared/src/id-generator.ts"],
      "@onecoach/lib-shared/utils/logger": ["../lib-shared/src/utils/logger/index.ts"],
      "@onecoach/types": ["../types/src/index.ts"],
      "@onecoach/types/*": ["../types/src/*"],
      "@onecoach/contracts": ["../contracts/src/index.ts"],
      "@onecoach/contracts/*": ["../contracts/src/*"],
      "@onecoach/constants": ["../constants/src/index.ts"],
      "@onecoach/constants/*": ["../constants/src/*"],
      "@onecoach/lib-config": ["../lib-config/src/index.ts"],
      "@onecoach/lib-config/*": ["../lib-config/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/auth/guards-client.*",
    "src/auth/auth-components.*",
    "src/user-memory/analyzer.*",
    "src/seeds/**/*",
    "src/db/init-db.ts",
    "src/db/init-db.js",
    "src/db/init-db.*"
  ]
}
